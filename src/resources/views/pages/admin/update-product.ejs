            <div class="product-details-info">
                <div class="single-block">
                    <h4>Update Product</h4>
                    <div class="row mt-3">
                        <div>
                            <form action="/products/update-product" method="post">
                                <div class="mb-3" style="display:none">
                                    <input type="text" value="<%= editProduct.productID %>" name="productID" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <input type="text" value="<%= editProduct.productName %>" name="productName" class="form-control" placeholder="Product Name">
                                </div>
                                <div class="mb-3">
                                    <label class="mb-1">Choose product type:</label>
                                    <select class="form-select" name="productTypeID">
                                        <% listProductTypes.forEach(function(productType) {
                                            var selected = ( productType.productTypeID== editProduct.productTypeID) ? "selected" : ""; %>
                                            <option value="<%= productType.productTypeID %>" <%= selected %>>
                                                <%= productType.productTypeName %>
                                            </option>
                                        <% }); %> 
                                    </select>
                                </div>
                                <div class="mb-3">         
                                  <input type="text" class="form-control" value="<%= editProduct.salePrice %>" name="salePrice" placeholder="Product Price" >
                                </div>
                                <div class="mb-3">
                                    <textarea class="form-control" name="description"  placeholder="Description" id="floatingTextarea"><%= editProduct.description %></textarea>
                                </div>
                                <div class="mt-2 text-center">
                                    <button type="submit" class="btn btn-success me-3">Update</button>
                                    <a href="/admin/manage-products" class="btn btn-primary">Back</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>        
        </div>   
    </section>
